            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@id/iv_change_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_change_icon"
            app:layout_constraintEnd_toStartOf="@id/iv_change_icon"
            android:layout_toStartOf="@id/iv_change_icon"
            />

        <ImageView
            android:id="@+id/iv_change_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_date"
            app:layout_constraintBottom_toBottomOf="@id/tv_date"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"/>


